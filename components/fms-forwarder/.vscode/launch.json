   "version": "0.2.0",
   "configurations": [
      {
         "type": "lldb",
         "request": "launch",
         "name": "Run executable 'fms-forwarder'",
         "preLaunchTask": "Run fms-forwarder",
         "cargo": {
            "args": [
               "build",
               "--bin=fms-forwarder",
               "--package=fms-forwarder",
            ],
            "filter": {
               "name": "fms-forwarder",
               "kind": "bin"
            }
         },
         "args": [
            "influx",
            "--influxdb-uri",
            "http://influxdb:8086",
            "--influxdb-token-file",
            "/tmp/influxdb.token",
         ],
         "cwd": "${workspaceFolder}"
      }
   ]
}